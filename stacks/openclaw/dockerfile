# syntax=docker/dockerfile:1.4

# Stage 1: Clone the OpenClaw repository
FROM alpine:latest AS source

RUN apk add --no-cache git

WORKDIR /src

# Build arg to bust cache for git clone when content changes
# Pass --build-arg CACHE_DATE=$(date) to force a fresh clone
ARG CACHE_DATE=1

RUN git clone --depth=1 https://github.com/openclaw/openclaw.git

# Stage 2: Build OpenClaw
FROM node:22-bookworm AS build

# Install Bun (required for build scripts)
RUN curl -fsSL https://bun.sh/install | bash
ENV PATH="/root/.bun/bin:${PATH}"

RUN corepack enable

WORKDIR /app

# Copy source from clone stage
COPY --from=source /src/openclaw/ .

# Install optional system packages if specified
ARG OPENCLAW_DOCKER_APT_PACKAGES=""
RUN if [ -n "$OPENCLAW_DOCKER_APT_PACKAGES" ]; then \
      apt-get update && \
      DEBIAN_FRONTEND=noninteractive apt-get install -y --no-install-recommends $OPENCLAW_DOCKER_APT_PACKAGES && \
      apt-get clean && \
      rm -rf /var/lib/apt/lists/* /var/cache/apt/archives/*; \
    fi

# Install dependencies and build
RUN pnpm install --frozen-lockfile
RUN OPENCLAW_A2UI_SKIP_MISSING=1 pnpm build
ENV OPENCLAW_PREFER_PNPM=1
RUN pnpm ui:build

# Stage 3: Production image
FROM node:22-bookworm-slim

RUN corepack enable

WORKDIR /app

# Copy built application from build stage
COPY --from=build /app /app

ENV NODE_ENV=production

# Ensure the openclaw config directory exists and is writable
RUN mkdir -p /home/node/.openclaw && chown -R node:node /home/node/.openclaw

CMD ["node", "dist/index.js"]
